<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinExamPart.Views.RegisterPage">

    <StackLayout
        Margin="15"
        VerticalOptions="Center">

        <Image x:Name="iconImage" Aspect="AspectFit" HorizontalOptions="FillAndExpand" Margin=" 0, 0, 0, 50" HeightRequest="150"></Image>
        <Entry Placeholder='E-mail' TextColor="{StaticResource blueColor}" Text="{Binding UsernameEntry}"/>
        <Entry Placeholder='Password' IsPassword="True" TextColor="{StaticResource blueColor}" Text="{Binding PasswordEntry}"/>
        <Entry Placeholder='Vertification code' TextColor="{StaticResource blueColor}" Text="{Binding VertificationCode}"/>
        <Button Text="Sign up" Command="{Binding RegisterCommand}"/>
    </StackLayout>

</ContentPage>